<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/unique_alarm_color"
            android:padding="25dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/text_alarm_type"
                android:text="@string/text_alarm_type"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textColor="#000000"
                android:gravity="left"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_column="0"
                    android:layout_row="1"
                    android:id="@id/text_last_buzz"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Last buzz"
                    android:textColor="#ff777777"
                    android:gravity="left"/>

            <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:id="@id/text_last_buzz_int_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="20 m ago"
                    android:textColor="#ff777777"
                    android:gravity="left"/>
        </LinearLayout>

    </LinearLayout>

    <GridLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center">

        <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/text_last_buzz"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="Last buzz"
                android:textColor="#ff777777"
                android:gravity="left"/>

        <TextView
                android:layout_column="2"
                android:layout_row="1"
                android:id="@+id/text_last_buzz_int_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="20 m ago"
                android:textColor="#ff777777"
                android:gravity="left"/>

        <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/text_previous_buzz"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="2nd Last buzz"
                android:textColor="#ff777777"
                android:gravity="left"/>
        <TextView
                android:layout_column="2"
                android:layout_row="2"
                android:id="@+id/text_previous_buzz_int_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="20 m ago"
                android:textColor="#ff777777"
                android:gravity="left"/>

        <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/text_today"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="@string/text_today"
                android:textColor="#ff000000"
                android:gravity="left"/>
        <TextView
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/text_today_int_value"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="7"
                android:textColor="#ff000000"
                android:gravity="left"/>

        <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:id="@+id/text_yesterday"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="Yesterday"
                android:textColor="#ff000000"
                android:gravity="center_vertical"/>
        <TextView
                android:layout_column="1"
                android:layout_row="4"
                android:id="@+id/text_yesterday_int_value"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="0"
                android:textColor="#ff000000"
                android:gravity="center_vertical"/>

    </GridLayout>




</LinearLayout>

