                            android:background="@drawable/unique_alarm_color_picker_shape"
                            android:backgroundTint="@color/colour_option_15"/>
                    <CheckBox
                            android:layout_column="3"
                            android:layout_row="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
