<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/buzzerbox_blue"
              android:gravity="center"
              android:id="@+id/login_layout">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
        <TextView
                android:id="@+id/txt_login_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:text="@string/text_login_title"
                android:textColor="@color/buzzerbox_white"
                android:textSize="@dimen/large_buzzerbox_font_logo"
                android:fontFamily="@string/buzzerbox_font_app_title"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />
        <EditText
                android:id="@+id/txt_username"
                android:hint="@string/email"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/buzzerbox_white"
                android:fontFamily="@string/buzzerbox_font_app_default"
                android:textColorHint="@color/buzzerbox_grey"
                android:textColor="@color/buzzerbox_black"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress"
                />
        <EditText
                android:id="@+id/txt_password"
                android:hint="@string/password"
                android:password="true"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/buzzerbox_white"
                android:textSize="@dimen/large_buzzerbox_font_size_small"
                android:fontFamily="@string/buzzerbox_font_app_default"
                android:textColorHint="@color/buzzerbox_grey"
                android:textColor="@color/buzzerbox_black"
                android:layout_marginBottom="60dp"
                android:inputType="textPassword"
                />


        <Button
                android:id="@+id/btn_login"
                android:text="@string/button_login_text"
                android:textColor="@color/buzzerbox_white"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:fontFamily="@string/buzzerbox_font_app_default"
                android:padding="5dp"
                android:textSize="@dimen/large_buzzerbox_font_size_default"
                android:background="@drawable/buttonshape_selector"
                android:layout_marginBottom="20dp"
                />

        <Button
                android:id="@+id/btn_create_account"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:text="@string/no_account"
                android:background="@null"
                android:textColor="@color/buzzerbox_white"
                android:textSize="@dimen/large_buzzerbox_font_size_small"
                android:fontFamily="@string/buzzerbox_font_app_default"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />


    </LinearLayout>

</LinearLayout>
